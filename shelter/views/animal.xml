<odoo>
  <data>
    <!-- shelter.animal.species -->

    <record model="ir.ui.view" id="animal_species_list">
      <field name="name">shelter.animal.species.list</field>
      <field name="model">shelter.animal.species</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="shelter.animal_species_form">
      <field name="name">shelter.animal.species.form</field>
      <field name="model">shelter.animal.species</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <field name="image" widget="image" class="oe_avatar" options="{'preview_image': 'image_medium'}"/>
            <div class="oe_title">
              <div class="oe_edit_only">
                <label for="name" string="Name"/>
              </div>
              <h1>
                <field name="name" placeholder="e.g. German Shepherd"/>
              </h1>
            </div>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.actions.act_window" id="shelter.act_window_animal_species">
      <field name="name">Species</field>
      <field name="res_model">shelter.animal.species</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Species" id="shelter.menu_animal_species_list" parent="shelter.menu_configuration"
      action="shelter.act_window_animal_species"/>

      <!-- shelter.animal.species.breed -->

      <record model="ir.ui.view" id="animal_species_breed_list">
        <field name="name">shelter.animal.species.breed.list</field>
        <field name="model">shelter.animal.species.breed</field>
        <field name="arch" type="xml">
          <tree>
            <field name="name"/>
          </tree>
        </field>
      </record>

      <record model="ir.ui.view" id="shelter.animal_species_breed_form">
        <field name="name">shelter.animal.species.breed.form</field>
        <field name="model">shelter.animal.species.breed</field>
        <field name="arch" type="xml">
          <form>
            <sheet>
              <field name="image" widget="image" class="oe_avatar" options="{'preview_image': 'image_medium'}"/>
              <div class="oe_title">
                <div class="oe_edit_only">
                  <label for="name" string="Name"/>
                </div>
                <h1>
                  <field name="name" placeholder="e.g. German Shepherd"/>
                </h1>
              </div>
              <group>
                <group>
                  <field name="species_id"/>
                </group>
              </group>
            </sheet>
          </form>
        </field>
      </record>

      <record model="ir.actions.act_window" id="shelter.act_window_animal_species_breed">
        <field name="name">Breeds</field>
        <field name="res_model">shelter.animal.species.breed</field>
        <field name="view_mode">tree,form</field>
      </record>

      <menuitem name="Breeds" id="shelter.menu_animal_species_breed_list" parent="shelter.menu_configuration"
        action="shelter.act_window_animal_species_breed"/>

      </data>
    </odoo>
